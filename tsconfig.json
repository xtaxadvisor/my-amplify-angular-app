{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "src/**/*.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ]
}

